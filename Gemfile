source 'https://rubygems.org'
ruby '2.2.1'

gem 'rails'

gem 'figaro'
gem 'jbuilder', '~> 2.0'

##########
# Assets #
##########

gem 'coffee-rails'
gem 'haml-rails'
gem 'jquery-rails'
gem 'sass-rails'
gem 'uglifier'


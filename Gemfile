  gem 'rails_12factor'
end

#####################
# Database / Server #
#####################

gem 'pg'
gem 'puma'

##############
# Test Tools #
##############

group :development, :test do
  gem 'better_errors'
  gem 'binding_of_caller'

  gem 'jazz_fingers'

  gem 'capybara'
  gem 'factory_girl_rails'
  gem 'rspec-rails'

  gem 'database_cleaner'
end

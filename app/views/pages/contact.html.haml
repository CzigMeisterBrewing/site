.container.content
  .row
    .col-lg-5.col-lg-offset-1.col-md-5.col-sm-5#contact-info
      %h3.czig-font.red Contact Info
      .cont-info-widget
        %ul
          %li
            %i.fa.fa-building
            106 Valentine St, Hackettstown, NJ 07840
          %li
            %i.fa.fa-envelope
            hello@czigmeisterbrewing.com
          %li
            %i.fa.fa-phone
            908-651-5492
      %h3.czig-font.red Hours
      %div
        %strong Wednesday -
        1pm to 8pm
      %div
        %strong Thursday -
        1pm to 8pm
      %div
        %strong Friday -
        10am to 7pm
      %div
        %strong Saturday -
        1pm to 8pm
      %div
        %strong Sunday -
        12pm to 6pm
      %h3.czig-font.red Events
      .cont-info-widget
        %ul
          %li
            Kirsten Stout, Event Coordinator
          %li
            %i.fa.fa-envelope
            events@czigmeisterbrewing.com
          %li
            %i.fa.fa-phone
            908-798-7078
      %h3.czig-font.red Sales
      .cont-info-widget
        %ul
          %li
            Mark Merville, Sales Manager
          %li
            %i.fa.fa-envelope
            sales@czigmeisterbrewing.com
          %li
            %i.fa.fa-phone
            201-874-2867
    .col-lg-5.col-md-7.col-sm-7#contact-form
      %h3.czig-font.red Drop Us A Line
      = form_tag(contact_us_path, method: :post) do
        .form-group
          %label.sr-only{ for: 'name' }
            Name
          %input.form-control{ id: 'name', name: 'name', placeholder: 'Enter Your Name', required: 'true' }
        .form-group
          %label.sr-only{ for: 'email' }
            Email
          %input.form-control{ id: 'email', name: 'email', placeholder: 'Enter Your Email', required: 'true' }
        .form-group
          %label.sr-only{ for: 'message' }
            Message
          %textarea.form-control{ id: 'message', name: 'message', placeholder: 'Enter Your Message', required: 'true', rows: '9' }
        %input.btn.btn-primary{ type: 'submit', value: 'Send' }
